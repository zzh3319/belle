/* pages/template/trend/trend.wxss */

.trend {
  margin: 24rpx auto 0;
  width: 700rpx;
  background-color: #fff;
  border-radius: 10rpx;
  box-shadow: 2px 2px 5px #cfcfcf;
}

.trend:last-child {
  margin-bottom: 24rpx;
}

.trend > .img-view {
  width: 100%;
  border-radius:10rpx 10rpx 0 0;
}

.trend > .title-bar {
  display: flex;
  padding: 18rpx 0;
  height: 110rpx;
  line-height: 34rpx;
}

.title-tag {
  margin: 0 20rpx 0 46rpx;
  padding-left: 21rpx;
  width: 94rpx;
  text-align: center;
  font-size: 24rpx;
  color: #b4b4b6;
  background: url(data:image/png;base64,) 0 0 no-repeat;
  background-size: 94rpx 34rpx;
}

.title {
  display: -webkit-box;
  width: 400rpx;
  font-size: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  max-height: 70rpx;
}

.sub-title {
  padding-right: 0;
  width: 80rpx;
  text-align: right;
  color: #b5b5b5;
  font-size: 22rpx;
}
