page{
  width: 100%;
  overflow: hidden;
}
.map {
  width: 100%;
  height: 440rpx!important;
}
.map map{
  width: 100%;
  height: 440rpx!important;
}

.address {
  border-top:15rpx solid #efefef;
  width: 100%;
  border-bottom: 1px solid #efefef;
  color: #3e3e3e;
}

.add_title {
  width: 100%;
  border-bottom: 2px solid #efefef;
  height: 90rpx;
  line-height: 33rpx;
}

.add_title .shop_name {
  font-size: 32rpx;
  margin-left: 30rpx;
  display: inline-block;
  color: #3e3e3e;
}

.tel {
  margin: 30rpx 30rpx 0;

  color: #3e3e3e;
  width: 100%;
}

.tel .tel_txt {
  width: 10%;
    font-size: 30rpx;
  display: inline-flex;
}

.add {
  margin: 0rpx 30rpx 15rpx 30rpx;
  font-size: 30rpx;
  color: #3e3e3e;
  width: 100%;
}

.add .add_txt {
  width: 10%;
  display: inline-flex;
  line-height: 30rpx;
}

.add .add_message {
  width: 60%;
  display: inline-flex;
}

.add_img {
  width: 25%;
  height: 100rpx;
  overflow: hidden;
  display: inline-flex;
  border-left: 1px solid #ccc;
  margin-left: 5%;
  box-sizing: border-box;
  vertical-align: middle;
}

.add_img {
  vertical-align: middle;
  margin-top: 10rpx;
  height: 60rpx;
}
.distance{
  height: 80rpx;
  width: 25%;
}
.dis_img{
  display: inline-flex;
  height: 30rpx;
  width: 40%;
  vertical-align: middle
}
.kilo{
  width: 60%;
  display: inline-flex;
  font-size: 30rpx;
  color: #696969;
  vertical-align: middle
}
.kilo text{
  display: inline-flex;
  vertical-align: middle
}